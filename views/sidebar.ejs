<div class="col-lg-3">
    <div class="row row-cols-1">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center justify-content-xl-start" style="height: 100px;z-index: 5;background: var(--bs-danger);">
                    <div style="background-image: url(&quot;https://minotar.net/body/<%= ((username == "Guest") ? "steve2" : username) %>/100.png&quot;);background-position: center;/*background: no-repeat;*/background-repeat: no-repeat;background-size: contain;width: 64px;height: 100px;transform: translateX(10px) translateY(20px);z-index: 3;opacity: 1;"></div>
                    <div class="row row-cols-1" style="margin-left: 15px;">
                        <div class="col-lg-12 d-flex d-lg-flex flex-column-reverse justify-content-center align-items-end align-items-lg-start justify-content-xl-center align-items-xl-start">
                            <p id="username-field" style="max-height: 1%;font-weight: bold;font-size: 18px;"><%= username %></p>
                        </div>
                        <div id="username-login" class="col d-flex justify-content-end justify-content-lg-start"><button class="btn bold" type="button" style="max-height: 38px;background: white;color: var(--bs-danger);" onclick="<%= ((isExist) ? "logout()" : "toggleLogin()") %>"><%= ((isExist) ? "Logout" : "Login") %></button></div>
                    </div>
                </div>
                <div class="card-body" style="z-index: 5;background: #2F3436;">
                    <div class="row row-cols-1">
                        <div class="col" style="margin-top: 5px;"><button onclick="location.href='/coins';" class="btn btn-secondary text-start btn-list" type="button" style="width: 100%;height: 82px;font-weight: bold;font-size: 18px;background: transparent;border-style: none;"><img src="<%= images.coins %>" style="margin-right: 13px;" width="50" height="50">Coins</button></div>
                        <div class="col" style="margin-top: 5px;"><button onclick="location.href='/ranks';" class="btn btn-secondary text-start btn-list" type="button" style="width: 100%;height: 82px;font-weight: bold;font-size: 18px;background: transparent;border-style: none;"><img src="<%= images.ranks %>" style="margin-right: 13px;" width="50" height="50">Ranks</button></div>
                        <div class="col" style="margin-top: 5px;"><button onclick="location.href='/crates';" class="btn btn-secondary text-start btn-list" type="button" style="width: 100%;height: 82px;font-weight: bold;font-size: 18px;background: transparent;border-style: none;"><img src="<%= images.crates %>" style="margin-right: 13px;" width="50" height="50">Crate</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>