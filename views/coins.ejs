<%- include("header") %> 
<%- include("popups/wip") %> 
<%- include("sidebar") %> 
<div class="col">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center" style="height: 90px;background: var(--bs-success);">
            <h6 class="fw-bold m-0" style="font-size: 25px;padding: 16px;">Welcome</h6>
        </div>
        <div class="card-body" style="background: var(--dark-card);">
            <div class="row row-cols-1" style="margin: 10px;">
                <div class="col">
                    <div class="row row-cols-1">
                        <div class="col">
                            <h1 style="font-size: 25px;">Coins</h1>
                        </div>
                        <div class="col" style="margin-top: 24px;">
                            <p style="color: var(--bs-gray-600);font-size: 17px;">Use Coins in-game to purchase keys, chat colors, upgrades, perks, and other items!<br /></p>
                        </div>
                        <div class="col" style="margin-top: 15px;margin-bottom: 15px;">
                            <div id="slider-points" class="d-flex justify-content-between"></div>
                            <div class="slider" style="margin-right: 20px;" min="100" max="1000" step="200">
                                <div id="gray" class="bar-gray">
                                    <div id="yellow" class="bar-yellow"></div>
                                </div>
                                <div id="slider-buttons" class="d-flex justify-content-between" style="margin-bottom: 100px;"></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row row-cols-1">
                                <div class="col text-center">
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col d-xl-flex justify-content-xl-center">
                                            <div style="background: #2A2F31;border-radius: 100%;border: 20px solid #2A2F31;"><img id="coin-img" src="https://dunb17ur4ymx4.cloudfront.net/packages/images/3ab79a4bb9fbb966436f5c85ce93f71a7fa87ed8.png" width="100" height="100" style="border-style: none;" /></div>
                                        </div>
                                        <div class="col"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col" style="text-align: center;">
                            <p id="coin-counter" class="text-center" style="font-weight: bold;margin-top: 11px;font-size: 25px;color: var(--bs-warning);">500 Coins</p>
                            <p id="coin-price" class="text-center" style="font-weight: bold;margin-top: -6px;font-size: 17px;color: var(--price);">Rp100.000,00</p><button onclick="toggleWIP()" class="btn bold" type="button" style="font-weight: bold;width: 110px;height: 50px;background: var(--bs-success);margin-bottom: 50px;">Buy</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("footer") %> 